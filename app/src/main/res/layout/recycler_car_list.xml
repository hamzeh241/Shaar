<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:weightSum="2">

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1.3"
    android:orientation="vertical">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="horizontal">

      <LinearLayout
        android:id="@+id/side"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          android:layout_marginTop="8dp"
          android:gravity="right|center_vertical"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/txtCarListProductionYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="2001"
            android:textSize="12sp" />

          <ImageView
            android:id="@+id/imageView10"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_baseline_access_time_filled_24" />

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:gravity="right|center_vertical"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/txtCarListMileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="120"
            android:textSize="12sp" />

          <ImageView
            android:id="@+id/imageView11"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_baseline_speed_24" />

        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:paddingRight="8dp">

        <TextView
          android:id="@+id/txtCarListName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right|center_vertical"
          android:text="TextView"
          android:textColor="#1a1d24" />

        <TextView
          android:id="@+id/txtCarListPrice"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right|center_vertical"
          android:text="TextView"
          android:textColor="#1a1d24"
          android:textSize="12sp" />

        <TextView
          android:id="@+id/txtCarListPro"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right|center_vertical"
          android:text="TextView"
          android:textColor="#1a1d24"
          android:textSize="12sp" />
      </LinearLayout>

    </LinearLayout>

    <ImageView
      android:id="@+id/imageView12"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="8dp"
      android:background="#696969" />

  </LinearLayout>

  <ImageView
    android:id="@+id/imgCarList"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.7"
    app:srcCompat="@drawable/c" />

</LinearLayout>