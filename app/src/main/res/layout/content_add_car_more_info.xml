<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
  android:layout_height="match_parent">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="right"
        android:text="اطلاعات تکمیلی"
        android:textColor="#BFBFBF" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/light_gray_background"
        android:gravity="center"
        android:padding="8dp">

        <Spinner
          android:id="@+id/spinnerBrand"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="برند" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/light_gray_background"
        android:gravity="center"
        android:padding="8dp">

        <Spinner
          android:id="@+id/spinnerModel"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="مدل" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/light_gray_background"
        android:gravity="center"
        android:padding="8dp">

        <Spinner
          android:id="@+id/spinnerEngineStatus"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="وضعیت موتور" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/light_gray_background"
        android:gravity="center"
        android:padding="8dp">

        <Spinner
          android:id="@+id/spinnerChassisStatus"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="وضعیت شاسی" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/light_gray_background"
        android:gravity="center"
        android:padding="8dp">

        <Spinner
          android:id="@+id/spinnerBodyStatus"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="وضعیت بدنه" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/light_gray_background"
        android:gravity="center"
        android:padding="8dp">

        <Spinner
          android:id="@+id/spinnerInsurance"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="مهلت بیمه" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/light_gray_background"
        android:gravity="center"
        android:padding="8dp">

        <Spinner
          android:id="@+id/spinnerGearbox"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="گیربکس" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/light_gray_background"
        android:gravity="center"
        android:padding="8dp">

        <Spinner
          android:id="@+id/spinnerDocuments"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="سند" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/light_gray_background"
        android:gravity="center"
        android:padding="8dp">

        <Spinner
          android:id="@+id/spinnerSellType"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="نحوه فروش" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/light_gray_background"
        android:gravity="center"
        android:padding="8dp">

        <CheckBox
          android:id="@+id/checkboxExchange"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right|center_vertical"
          android:text="معاوضه" />

      </LinearLayout>

    </LinearLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>