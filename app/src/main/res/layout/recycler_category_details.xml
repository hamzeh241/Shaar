<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:id="@+id/categoryItemRootLayout"
  android:layout_height="88dp">

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.5"
    android:orientation="vertical">

    <TextView
      android:id="@+id/txtCategoryTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="8dp"
      android:layout_marginTop="8dp"
      android:text="متن تستی"
      android:textColor="#1a1d24"
      android:textSize="16sp"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal">

      <ImageButton
        android:id="@+id/imgCategoryDetailsFavorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

      <TextView
        android:id="@+id/txtCategoryAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="متن تستی" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:padding="2dp">

      <TextView
        android:id="@+id/txtCategoryDetailsRateCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="5 رای" />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/blue_ratings_background"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/imageView14"
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_baseline_star_24" />

        <ImageView
          android:id="@+id/imageView13"
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_baseline_star_24" />

        <ImageView
          android:id="@+id/imageView12"
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_baseline_star_24" />

        <ImageView
          android:id="@+id/imageView11"
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_baseline_star_24" />

        <ImageView
          android:id="@+id/imageView10"
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_baseline_star_24" />
      </LinearLayout>

    </LinearLayout>

    <ImageView
      android:id="@+id/imageView15"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="8dp"
      android:background="#8A8A8A" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="0.3"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
      android:id="@+id/imgCategoryDetail"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      tools:srcCompat="@drawable/a" />
  </LinearLayout>
</LinearLayout>