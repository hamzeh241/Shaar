<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="4dp"
  android:layout_marginLeft="8dp"
  android:layout_marginRight="8dp"
  android:layout_marginTop="4dp"
  app:cardCornerRadius="4dp"
  app:cardElevation="0dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3">

    <ImageView
      android:id="@+id/imageView30"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/txtCommentMessage"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="8dp"
      app:srcCompat="@drawable/ic_outline_thumb_up_24" />

    <ImageView
      android:id="@+id/imageView31"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txtCommentMessage"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="8dp"
      android:layout_toEndOf="@+id/txtCommentLikeCount"
      app:srcCompat="@drawable/ic_outline_thumb_down_alt_24" />

    <TextView
      android:id="@+id/txtCommentMessage"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/imgCommentAvatar"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp"
      android:gravity="right"
      android:text="TextView"
      android:textColor="#1a1d24" />

    <TextView
      android:id="@+id/txtCommentUserAddress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="8dp"
      android:layout_marginTop="16dp"
      android:layout_toStartOf="@+id/imgCommentAvatar"
      android:text="9030264757"
      android:textColor="#1a1d24"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/txtCommentDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txtCommentUserAddress"
      android:layout_marginRight="8dp"
      android:layout_marginTop="8dp"
      android:layout_toStartOf="@+id/imgCommentAvatar"
      android:text="6 ماه پیش"
      android:textSize="12sp" />

    <TextView
      android:id="@+id/txtCommentLikeCount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/imageView30"
      android:layout_marginLeft="8dp"
      android:layout_toEndOf="@+id/imageView30"
      android:text="9"
      android:textColor="#1a1d24" />

    <TextView
      android:id="@+id/txtCommentDislikeCount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/imageView31"
      android:layout_marginLeft="8dp"
      android:layout_toEndOf="@+id/imageView31"
      android:text="2"
      android:textColor="#1a1d24" />

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/imgCommentAvatar"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp"
      android:src="@drawable/user_icon" />
  </RelativeLayout>

</androidx.cardview.widget.CardView>