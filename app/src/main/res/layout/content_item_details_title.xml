<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
    android:id="@+id/ratings"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/imageView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      app:srcCompat="@drawable/ic_baseline_star_24" />

    <ImageView
      android:id="@+id/imageView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      app:srcCompat="@drawable/ic_baseline_star_24" />

    <ImageView
      android:id="@+id/imageView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      app:srcCompat="@drawable/ic_baseline_star_24" />

    <ImageView
      android:id="@+id/imageView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      app:srcCompat="@drawable/ic_baseline_star_24" />

    <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      app:srcCompat="@drawable/ic_baseline_star_24" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_below="@id/textView4"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/gray_search_background"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/imageView16"
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:background="#878787" />

    <ImageView
      android:id="@+id/imageView18"
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:background="#878787" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.33"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/imageView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_add_a_photo_24" />

      <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/addPhoto"
        android:textAlignment="center"
        android:textColor="#1a1d24"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.33"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/imageView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_message_24" />

      <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/addComment"
        android:textAlignment="center"
        android:textColor="#1a1d24"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.33"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_star_border_24" />

      <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/addRating"
        android:textAlignment="center"
        android:textColor="#1a1d24"
        android:textSize="12sp" />
    </LinearLayout>
  </LinearLayout>

  <TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@id/ratings"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:text="سالن دیاکو حسنی"
    android:textColor="#1a1d24"
    android:textSize="18sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@id/textView3"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:text="پزشکی - زیبایی"
    android:textColor="#1a1d24" />

  <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_toStartOf="@+id/ratings"
    android:text="TextView"
    android:textSize="10sp" />

</RelativeLayout>