<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginTop="16dp"
  android:gravity="right"
  android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <TextView
    android:id="@+id/txtCategoryItemDetailsDescriptionTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:text="درباره کلینیک دیاکو حسنی" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
      android:id="@+id/btnCategoryItemDetailsShowDescription"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@drawable/white_gradient"
      android:gravity="bottom|center_horizontal"
      android:text="@string/moreInfo"
      android:textColor="@color/colorBlue"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/txtCategoryItemDetailsDescription"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="16dp"
      android:layout_marginTop="8dp"
      android:gravity="right"
      android:textColor="#1a1d24" />
  </RelativeLayout>

</LinearLayout>