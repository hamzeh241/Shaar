<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:text="@string/brandAndModel" />

        <TextView
            android:id="@+id/txt_car_brand"
            style="@style/carDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/CarMadeYaer" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative1"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/relative1"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:text="@string/CarBodySituation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/carDetails"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/CarMadeYaer" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative2"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative2"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:text="@string/Chassis" />

        <TextView
            android:id="@+id/tct_car_chasis_status"
            style="@style/carDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/CarMadeYaer" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative3"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/relative4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/relative3"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:text="@string/CarBodySituation" />

        <TextView
            android:id="@+id/txt_car_body_status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/carDetails"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/CarMadeYaer" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative4"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/relative5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative4"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:text="@string/InsuranceTime" />

        <TextView
            android:id="@+id/txt_car_insurance_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/carDetails"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/CarMadeYaer" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative5"
        android:background="@color/line" />


    <RelativeLayout
        android:id="@+id/relative6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative5"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:text="@string/gearBox" />

        <TextView
            android:id="@+id/txt_car_gearBox_type"
            style="@style/carDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/CarMadeYaer" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative6"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/relative7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative6"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:text="@string/ducument" />

        <TextView
            android:id="@+id/txt_car_ducument_type"
            style="@style/carDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/CarMadeYaer" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative7"
        android:background="@color/line" />


    <RelativeLayout
        android:id="@+id/relative8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative7"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:text="@string/sales" />

        <TextView
            android:id="@+id/txt_car_sales_type"
            style="@style/carDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/CarMadeYaer" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative8"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/relative9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative8"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:text="@string/carPrice" />

        <TextView
            android:id="@+id/txt_car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/carDetails"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/CarMadeYaer" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_line8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relative9"
        android:background="@color/line" />



</RelativeLayout>