<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="اطلاعات تماس"
        android:textColor="#BFBFBF" />

      <EditText
        android:id="@+id/edtAddItemAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/light_gray_background"
        android:ems="10"
        android:gravity="center"
        android:hint="آدرس"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:scrollbars="horizontal"
        android:singleLine="true"
        android:textSize="14sp" />

      <EditText
        android:id="@+id/edtAddItemCellPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/light_gray_background"
        android:ems="10"
        android:maxLength="11"
        android:gravity="center"
        android:hint="شماره تلفن"
        android:inputType="phone"
        android:padding="8dp"
        android:textSize="14sp" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
          android:id="@+id/edtAddItemTel2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_weight="1"
          android:background="@drawable/light_gray_background"
          android:ems="10"
          android:maxLength="8"
          android:gravity="center"
          android:inputType="phone"
          android:padding="8dp"
          android:hint="تلفن 2"
          android:textSize="14sp" />

        <EditText
          android:id="@+id/edtAddItemTel1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_weight="1"
          android:background="@drawable/light_gray_background"
          android:ems="10"
          android:maxLength="8"
          android:gravity="center"
          android:inputType="phone"
          android:padding="8dp"
          android:hint="تلفن 1"
          android:textSize="14sp" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_weight="1"
          android:background="@drawable/light_gray_background"
          android:gravity="center">

          <EditText
            android:id="@+id/edtAddItemTelegramId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/light_gray_background"
            android:ems="10"
            android:gravity="center"
            android:hint="ایدی اینستاگرام"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="14sp" />

          <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
              app:srcCompat="@drawable/ic_instagram"
              app:tint="#636363" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="8dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_weight="1"
          android:background="@drawable/light_gray_background"
          android:gravity="center">

          <EditText
            android:id="@+id/edtAddItemInstagramId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/light_gray_background"
            android:ems="10"
            android:gravity="center"
            android:hint="ایدی تلگرام"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="14sp" />

          <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:tint="#636363"
            app:srcCompat="@drawable/ic_telegram" />

        </LinearLayout>
      </LinearLayout>

      <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="ایدی خود را بدون @ وارد کنید"
        android:textColor="#1a1d24" />

    </LinearLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>