<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clickable="true"
  android:background="@color/colorWhite">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/colorRed"
    android:elevation="8dp"
    android:minHeight="?attr/actionBarSize"
    android:theme="?attr/actionBarTheme">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageButton
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_24"
        app:tint="@color/colorWhite" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="سبد خرید"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgBack"
        app:layout_constraintTop_toTopOf="parent" />

      <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_delete_forever_24"
        android:id="@+id/imgClearList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:background="?selectableItemBackgroundBorderless"
        app:tint="@color/colorWhite" />

      <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_format_list_numbered_24"
        android:id="@+id/imgOrderList"
        app:layout_constraintStart_toEndOf="@+id/imgClearList"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="?selectableItemBackgroundBorderless"
        app:tint="@color/colorWhite" />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.appcompat.widget.Toolbar>

  <LinearLayout
    android:id="@+id/cartHeader"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_below="@+id/toolbar7"
    android:background="@color/colorPaleBlack"
    android:elevation="4dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="vertical">

      <TextView
        android:id="@+id/txtItemsInCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="#434343" />

      <TextView
        android:id="@+id/txtTotalCartPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19000 تومان"
        android:textColor="#434343" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="کالاهای موجود در سبد: "
        android:textColor="#434343" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="هزینه با احتساب تخفیف: "
        android:textColor="#434343" />
    </LinearLayout>

  </LinearLayout>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/fruitCartList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/cartHeader"
    android:foregroundGravity="center"
    android:layout_above="@+id/submitCart" />

  <include
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    layout="@layout/content_fruit_no_item"
    android:layout_centerInParent="true"
    android:visibility="gone"
    android:id="@+id/includeNoItem" />

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:background="@color/colorBlue"
    android:gravity="center"
    android:id="@+id/submitCart">

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/ic_baseline_check_circle_24"
      android:id="@+id/imgSubmitBuy"
      android:layout_weight="1"
      android:background="?selectableItemBackgroundBorderless"
      android:tint="@color/colorWhite"
      android:visibility="gone" />

    <TextView
      android:text="تایید و پرداخت سبد"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:textStyle="bold"
      android:textColor="@color/colorWhite"
      android:visibility="visible"
      android:id="@+id/txtSubmitBuy" />

    <EditText
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:ems="10"
      android:id="@+id/edtCartAddress"
      android:layout_weight="1"
      android:background="@color/colorBlue"
      android:hint="آدرس گیرنده را وارد کنید"
      android:textColorHint="#BFBFBF"
      android:layout_marginRight="16dp"
      android:layout_marginLeft="16dp"
      android:textColor="@color/colorWhite"
      android:visibility="gone" />
  </LinearLayout>

  <ProgressBar
    style="?android:attr/progressBarStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/loading"
    android:layout_centerInParent="true"
    android:visibility="gone" />

</RelativeLayout>