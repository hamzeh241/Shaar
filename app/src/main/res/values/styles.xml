<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Theme.AppCompat.Light.NoActionBar">
<!--    <item name="windowNoTitle">true</item>-->
    <item name="windowActionBar">false</item>
<!--    <item name="android:windowFullscreen">true</item>-->
<!--    <item name="android:windowContentOverlay">@null</item>-->
    <item name="android:fontFamily">@font/iran_sans</item>

  </style>

  <style name="CityGuideTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:fontFamily">@font/iran_sans</item>

  </style>

  <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
    <item name="dialogCornerRadius">16dp</item>
  </style>

  <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark">
    <item name="android:textColorPrimary">@color/colorWhite</item>
    <item name="android:textSize">18dp</item>
  </style>

  <style name="StyleTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
    <item name="android:textColorHint">@color/colorWhite</item>
    <item name="colorAccent">@color/colorWhite</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="mySpinnerStyle" parent="android:style/Widget.ListView.DropDown">
    <item name="android:divider">#01579B</item>
    <item name="android:dividerHeight">1dp</item>
  </style>

  <style name="progressBarStyle" parent="@style/Theme.AppCompat">
    <item name="colorAccent">@color/colorBlue</item>
  </style>

  <style name="progressBarStyle2" parent="@style/Theme.AppCompat">
    <item name="colorAccent">@color/colorWhite</item>
  </style>


  <style name="carDetails" >

    <item name="android:textColor">@color/black</item>

  </style>


  <style name="AppTheme.NavigationView">
    <item name="colorPrimary">@color/colorBlack</item>
    <item name="android:textColorPrimary">@color/colorBlack</item>
    <item name="android:textColor">@color/colorBlack</item>
    <item name="android:subtitleTextColor" tools:targetApi="m">@color/colorBlack</item>
  </style>

</resources>
